generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ProductReviews {
  author  String?
  content String?
}

model Product {
  id          String           @id @default(auto()) @map("_id") @db.ObjectId
  description String
  discount    String
  image       String
  name        String
  price       Int
  rating      String
  reviews     ProductReviews[]
  sizes       String[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@map("products")
}
